{
  "compilerOptions": {
    "esModuleInterop": false,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": false,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022"],
    "moduleResolution": "NodeNext",
    "outDir": "dist",
  },
  "include": ["index.ts"]
}
